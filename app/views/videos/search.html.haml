%section.genre
  %header.clearfix
    %h1= "Search by '#{@keywords}'"
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - @videos.each do |video|
      .video.span2
        = link_to video_path(video) do 
          = image_tag video.small_cover 
