%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        =image_tag @video.large_cover || "http://dummyimage.com/665x375/000000/00a2ff"
      .video_info.span3
        %header
          %h3= @video.title
          %span Rating: #{@reviews.average("rating").round(1)}/5.0
        %p= @video.description
        .actions
          = link_to "Watch Now", "#", :class => "btn btn-primary"
          = link_to "+ My Queue", "#", :class => "btn"

%section.reviews.container
  .row
    .span10.offset1
      %form
        %fieldset
          %label Rate this video
          %select(name="")
            %option(value="5") 5 Stars
            %option(value="4") 4 Stars
            %option(value="3") 3 Stars
            %option(value="2") 2 Stars
            %option(value="1") 1 Star
          %label Write Review
          %textarea.span6(name="" rows="6")
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          %a(href="") Cancel
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .span2
                %span Rating: #{review.rating} / 5
                %p by #{link_to review.user.full_name, "#"}
              .span8
                %p #{review.content}
