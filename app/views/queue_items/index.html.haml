%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_items.each do |queue_item|
              %tr
                %td
                  = text_field_tag :position, queue_item.position
                %td
                  = link_to queue_item.video_title, queue_item.video
                %td
                  = button_to "Play", nil, class: "btn"
                %td
                  = select_tag :rating, options_for_select(5.downto(1).map { |i| [pluralize(i, "Star"), i] }, queue_item.rating)

                %td
                  - queue_item.categories.each do |category|
                    = link_to category.name, category
                %td
                  = link_to "", method: :post do
                    %i.icon-remove
        = button_to "Update Instant Queue", nil, class: "btn"
